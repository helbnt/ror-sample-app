<%= provide(:title, @user.name) %>


<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h2>
        <%= @user.email %>
      </h2>
      <h3>
        <%= @user.url %>
      </h3>
    </section>
  </aside>
</div>


