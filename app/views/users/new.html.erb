<% provide(:title, 'Sign up') %>

<div class="row">
  <div class="col-md-6 mx-auto">
  <h1>Sign up</h1>

    <%= form_with(model: @user) do |f| %>
    <%= render 'shared/error_messages' %>
      <%= f.label :name, class: "form-label mb-0" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, class: "form-label mt-3 mb-0" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, class: "form-label mt-3 mb-0" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, "Confirmation", class: "form-label mt-3 mb-0" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "Create my account", class: "btn btn-primary mt-3" %>
    <% end %>
  </div>
</div>
